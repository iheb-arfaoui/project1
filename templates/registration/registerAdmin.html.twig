{% extends 'backend.html.twig' %}

{% block title %}Sign up{% endblock %}

{% block body %}

<div class="container-fluid position-relative d-flex p-0">
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->


    <!-- Sign Up Start -->
    <div class="container-fluid">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <a href="backendHome">
                            <img src="img/logos.png" alt="" style="height: 45px; width: 45px;">
                            <img src="img/tran.png" alt="" style="height: 45px; width: 150px; transform: translateX(-5px);">
                        </a>
                        <h3 style="transform: translateY(5px);">Sign Up</h3>
                    </div>
                    {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                    <div class="form-floating mb-3">
                        {{ form_widget(form.prenom, {'attr': {'class': 'input-box'}}) }}
                        <label for="floatingText">First name</label>
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(form.nom, {'attr': {'class': 'input-box'}}) }}
                        <label for="floatingInput">Last name</label>
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(form.email, {'attr': {'class': 'input-box'}}) }}
                        <label for="floatingInput">Email address</label>
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(form.cin, {'attr': {'class': 'input-box'}}) }}
                        <label for="floatingInput">Identity number</label>
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(form.address, {'attr': {'class': 'input-box'}}) }}
                        <label for="floatingInput">Address</label>
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(form.password, {'attr': {'class': 'input-box'}}) }}
                        <label for="floatingInput">Password</label>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Check me out</label>
                        </div>
                        <a href="">Forgot Password</a>
                    </div>
                    {{ form_row(form.Sign_up, {'attr': {'class': 'btn btn-primary py-3 w-100 mb-4'}}) }}
                    <p class="text-center mb-0">Already have an Account? <a href="login">Sign In</a></p>
                    {{form_end(form)}}
                </div>
            </div>
        </div>
    </div>
    <!-- Sign Up End -->
</div>

{% endblock %}
